<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- TIPOGRAFÍA UNIFICADA GLSTOCK -->
    <style name="GLStockTextHeading1">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif-black</item>
        <item name="android:lineSpacingExtra">2dp</item>
    </style>

    <style name="GLStockTextHeading2">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:lineSpacingExtra">2dp</item>
    </style>

    <style name="GLStockTextHeading3">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="GLStockTextSubtitle1">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:lineSpacingExtra">2dp</item>
    </style>

    <style name="GLStockTextSubtitle2">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="GLStockTextBody1">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:lineSpacingExtra">3dp</item>
    </style>

    <style name="GLStockTextBody2">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:lineSpacingExtra">2dp</item>
    </style>

    <style name="GLStockTextCaption">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_tertiary</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="GLStockTextButton">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_white</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- BOTONES UNIFICADOS -->
    <style name="GLStockButtonPrimary" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/button_primary</item>
        <item name="android:textAppearance">@style/GLStockTextButton</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:elevation">2dp</item>
        <item name="cornerRadius">12dp</item>
    </style>

    <style name="GLStockButtonSuccess" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/button_success</item>
        <item name="android:textAppearance">@style/GLStockTextButton</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:elevation">2dp</item>
        <item name="cornerRadius">12dp</item>
    </style>

    <style name="GLStockButtonWarning" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/button_warning</item>
        <item name="android:textAppearance">@style/GLStockTextButton</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:elevation">2dp</item>
        <item name="cornerRadius">12dp</item>
    </style>

    <style name="GLStockButtonError" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/button_error</item>
        <item name="android:textAppearance">@style/GLStockTextButton</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:elevation">2dp</item>
        <item name="cornerRadius">12dp</item>
    </style>

    <!-- BOTONES COMPACTOS PARA ACCIONES RÁPIDAS -->
    <style name="GLStockButtonCompact" parent="GLStockButtonPrimary">
        <item name="android:minHeight">40dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="GLStockButtonCompactSuccess" parent="GLStockButtonSuccess">
        <item name="android:minHeight">40dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textSize">13sp</item>
    </style>

    <!-- CARDS UNIFICADAS -->
    <style name="GLStockCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardBackgroundColor">@color/surface_card</item>
        <item name="contentPadding">16dp</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="GLStockCardDashboard" parent="GLStockCard">
        <item name="cardCornerRadius">20dp</item>
        <item name="cardElevation">6dp</item>
        <item name="contentPadding">20dp</item>
        <item name="android:layout_margin">12dp</item>
    </style>

    <style name="GLStockCardCompact" parent="GLStockCard">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">2dp</item>
        <item name="contentPadding">12dp</item>
        <item name="android:layout_margin">6dp</item>
    </style>

    <!-- INPUT FIELDS UNIFICADOS -->
    <style name="GLStockTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/primary_blue</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <!-- TOOLBAR UNIFICADO -->
    <style name="GLStockToolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="android:background">@drawable/gradient_primary</item>
        <item name="titleTextColor">@color/text_white</item>
        <item name="subtitleTextColor">@color/text_white</item>
        <item name="android:elevation">4dp</item>
    </style>

    <!-- HEADER UNIFICADO PARA TODAS LAS PANTALLAS -->
    <style name="GLStockHeaderTitle">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/text_white</item>
        <item name="android:fontFamily">sans-serif-black</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="GLStockHeaderSubtitle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_white</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:alpha">0.9</item>
    </style>

    <!-- ESTILO UNIFICADO PARA BOTTOM NAVIGATION -->
    <style name="GLStockBottomNavigation" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:background">@color/surface_white</item>
        <item name="android:elevation">8dp</item>
        <item name="itemIconTint">@color/primary_blue</item>
        <item name="itemTextColor">@color/primary_blue</item>
        <item name="itemActiveIndicatorStyle">@style/GLStockActiveIndicator</item>
        <item name="labelVisibilityMode">labeled</item>
    </style>

    <!-- INDICADOR ACTIVO PARA LA NAVEGACIÓN -->
    <style name="GLStockActiveIndicator">
        <item name="android:color">@color/chip_background</item>
        <item name="android:shape">rectangle</item>
        <item name="cornerRadius">12dp</item>
    </style>

</resources>