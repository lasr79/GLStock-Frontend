<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5">

    <View
        android:id="@+id/viewTopBackground"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#3F51B5"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvReportesTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reportes"
        android:textSize="24sp"
        android:textColor="#FFFFFF"
        android:layout_marginTop="24dp"
        android:layout_marginStart="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnTotalProductos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Total Productos"
        android:layout_marginTop="32dp"
        android:layout_marginHorizontal="16dp"
        android:padding="12dp"
        android:backgroundTint="#FFFFFF"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/viewTopBackground"/>

    <Button
        android:id="@+id/btnCategoria"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Categoría"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="16dp"
        android:padding="12dp"
        android:backgroundTint="#FFFFFF"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/btnTotalProductos"/>

    <Button
        android:id="@+id/btnBajoStock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Productos con bajo stock"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="16dp"
        android:padding="12dp"
        android:backgroundTint="#FFFFFF"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/btnCategoria"/>

    <Button
        android:id="@+id/btnUltimosMovimientos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Últimos movimientos"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="16dp"
        android:padding="12dp"
        android:backgroundTint="#FFFFFF"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/btnBajoStock"/>

    <Button
        android:id="@+id/btnDescargarReporte"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Descargar Reporte PDF"
        android:layout_marginTop="32dp"
        android:layout_marginHorizontal="16dp"
        android:padding="12dp"
        android:backgroundTint="#3F51B5"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/btnUltimosMovimientos"/>

</androidx.constraintlayout.widget.ConstraintLayout>