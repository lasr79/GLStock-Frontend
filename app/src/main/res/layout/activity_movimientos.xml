<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#f5f5f5"
    tools:context=".ui.gestor.MovimientosActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#3F51B5"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvMovimientosTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Registrar movimientos"
        android:textSize="24sp"
        android:textColor="#FFFFFF"
        android:padding="16dp"
        android:background="#3F51B5"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvProductoLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Producto"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/tvMovimientosTitle"
        app:layout_constraintStart_toStartOf="parent"/>

    <Spinner
        android:id="@+id/spinnerProducto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@android:drawable/btn_dropdown"
        android:spinnerMode="dropdown"
        app:layout_constraintTop_toBottomOf="@id/tvProductoLabel"/>

    <TextView
        android:id="@+id/tvStockActual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stock actual: N/A"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/spinnerProducto"
        app:layout_constraintStart_toStartOf="parent"/>

    <RadioGroup
        android:id="@+id/rgTipoMovimiento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/spinnerProducto">

        <RadioButton
            android:id="@+id/rbEntrada"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Entrada"/>

        <RadioButton
            android:id="@+id/rbSalida"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Salida"/>
    </RadioGroup>

    <TextView
        android:id="@+id/tvLimiteRetiro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LÃ­mite de retiro: 0"
        android:visibility="gone"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/rgTipoMovimiento"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tvCantidadLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cantidad"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/rgTipoMovimiento"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/etCantidad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:inputType="number"
        android:hint="5"
        android:background="@android:drawable/editbox_background"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvCantidadLabel"/>

    <TextView
        android:id="@+id/tvMotivoLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Motivo"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/etCantidad"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/etMotivo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="Pedido del proveedor"
        android:background="@android:drawable/editbox_background"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvMotivoLabel"/>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btnRegistrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Registrar"
        android:layout_marginTop="32dp"
        android:backgroundTint="#3F51B5"
        app:layout_constraintTop_toBottomOf="@id/etMotivo"/>

</androidx.constraintlayout.widget.ConstraintLayout>