<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Fondo principal con gradiente -->
    <item>
        <shape>
            <gradient
                android:startColor="@color/primary_gradient_start"
                android:endColor="@color/primary_gradient_end"
                android:angle="135"
                android:type="linear" />
        </shape>
    </item>

    <!-- Overlay blanco con esquinas redondeadas para crear el efecto de curva hacia adentro -->
    <item android:bottom="-30dp">
        <shape>
            <solid android:color="@color/background_main" />
            <corners
                android:topLeftRadius="30dp"
                android:topRightRadius="30dp" />
        </shape>
    </item>
</layer-list>